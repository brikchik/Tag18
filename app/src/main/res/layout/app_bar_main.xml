<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/search_layout"
            android:layout_width="match_parent"
            android:background="#bbbb6b"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/search_box"
                android:layout_width="fill_parent"
                android:layout_marginEnd="100dp"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_alignParentStart="true"
                android:singleLine="true"/>
            <Button
                android:id="@+id/search_button"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="SEARCH"
                android:onClick="fillFiles"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/file_layout"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            >
            <GridView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/filesGridView"
                android:numColumns="auto_fit"
                android:gravity="center"
                android:columnWidth="200dp"
                android:stretchMode="columnWidth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:longClickable="true">
            </GridView>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/graph_menu_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/menu_open_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#f4fa1f56"
                        android:text="меню"
                        android:textColor="#ffffff"/>
                    <Button
                        android:id="@+id/folder_add_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#f0aa0056"
                        android:text="+папка"
                        android:textColor="#ffffff"/>
                    <Button
                        android:id="@+id/listen_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#ff050f56"
                        android:text="микрофон"
                        android:textColor="#ffffff" />
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#000000"
                        android:text="теги"
                        android:id="@+id/tags_open_button"
                        android:textColor="#ffffff"/>
                </LinearLayout>
        </RelativeLayout>
    </LinearLayout>